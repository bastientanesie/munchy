<body class="login">

	<div class="container">

	<form class="form-signin" method="POST" action="/authenticate">

		<h2 class="form-signin-heading">Please sign in</h2>

		<input type="text" name="username" class="input-block-level" placeholder="Username">

		<button class="btn btn-large btn-primary" type="submit">Sign in</button>

	</form>

	</div> <!-- /container -->

	<!-- Le javascript
	================================================== -->
	<script src="libs/jquery-2.0.2.min.js"></script>
	<script src="libs/bootstrap.js"></script>

	<script type="text/javascript">
		$(document).ready(function () {
			var form = $('.form-signin')[0];

			// Si on a stocké le pseudo
			if ( typeof(localStorage['username']) != "undefined" )
			{
				// On préremplie le champ
				form.username.value = localStorage['username'];
				form.submit();
			}

			// Envoie du formulaire
			$('.form-signin').on('submit', function(event)
			{
				if ( this.username.value != '' )
				{
					// On sauvegarde en local
					localStorage['username'] = this.username.value;
				}
				else
				{
					return false;
				}
			});
		});
	</script>

  </body>
